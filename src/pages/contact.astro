---
import { Icon } from "astro-icon";
import BaseLayout from "@layouts/BaseLayout.astro";


import Contactform from "@components/contactform.astro";

---

<BaseLayout title="Contact">
 


    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
      <div>
        <h2 class="font-medium text-2xl text-black-800 dark:text-white-800">
          Contact Ivan
        </h2>
        <p
          class="text-lg leading-relaxed text-black-800 dark:text-white-800 mt-3"
        >
          Have something to say? I am here to help. Fill up the form or send
          email or call phone.
        </p>
        <div class="mt-5">
          <div
            class="flex items-center mt-2 space-x-2 text-black-800 dark:text-white-800"
          >
            <Icon class="text-gray-400 w-4 h-4" name="uil:map-marker" />
            <span>Orlando, Fl 32801</span>
          </div><div
            class="flex items-center mt-2 space-x-2 text-black-800 dark:text-white-800"
          >
            <Icon class="text-gray-400 w-4 h-4" name="uil:envelope" /><a
              href="mailto:arias.ivan@hcoco1.com">arias.ivan@hcoco1.com</a
            >
          </div><div
            class="flex items-center mt-2 space-x-2 text-black-800 dark:text-white-800"
          >
            <Icon class="text-gray-400 w-4 h-4" name="uil:phone" /><a
              href="tel:+1 (987) 4587 899">+1 (987) 4587 899</a
            >
          </div>
        </div>
      </div>
      <div>
        <Contactform />
      </div>
    </div>
 
</BaseLayout>
